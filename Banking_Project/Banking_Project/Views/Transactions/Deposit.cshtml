@model Banking_Project.Models.RegisterViewModel

@{
    ViewBag.Title = "Deposit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* Web page for depositing money into a banking account. *@

    <h2 class="heading">Deposit your hard earned cash!</h2>
    <hr />
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
                <p class="sub-heading">Enter the amount you wish to deposit: </p>
                @Html.EditorFor(model => model.Balance, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Balance, "", new { @class = "text-danger" })

            </div>
        </div>
        @* Deposit Button *@
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Deposit" class="btn btn-default" name="deposit" />
            </div>
        </div>
    </div>
    






