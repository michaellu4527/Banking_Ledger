
@{
    ViewBag.Title = "Deposit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* Web page for depositing money into a banking account. *@

    <h2 class="heading">Deposit your hard earned cash!</h2>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <p class="sub-heading">Enter the amount you wish to deposit: </p>
                @* Form field for entering deposit amount *@
                <div class="col-md-10">
                    @Html.TextBox("Name", null, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
    <br />
    <div>
        <input type="button" value="Deposit" />
    </div>


