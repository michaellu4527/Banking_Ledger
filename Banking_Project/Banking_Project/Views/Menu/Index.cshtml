@{
    ViewBag.Title = "Bank Home Page";
}

<div class="jumbotron">
    <h1>Welcome to the Bank</h1>
    <br />
    <p class="lead">Name: @Html.TextBox("Name", null, new { @class = "form-control" })</p>
    <p class="lead">Account Number: @Html.TextBox("Name", null, new { @class = "form-control" })</p>

    <br />
    <br />
    <div class="row">
        <div class="col-md-3">
            <input type="button" value="Deposit" onclick="location.href='@Url.Action("Deposit", "Transactions")'">
        </div>
        <div class="col-md-3">
            <input type="button" value="Withdraw" onclick="location.href='@Url.Action("Withdraw", "Transactions")'">
        </div>
        <div class="col-md-3">
            <input type="button" value="Check Balance" onclick="location.href='@Url.Action("Balance", "Transactions")'">
        </div>
        <div class="col-md-3">
            <input type="button" value="Past Transactions" onclick="location.href='@Url.Action("History", "Transactions")'">
        </div>

    </div>

</div>


